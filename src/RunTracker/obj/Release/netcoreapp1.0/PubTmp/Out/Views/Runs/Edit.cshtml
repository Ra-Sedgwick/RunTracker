@model RunTracker.Models.Run

@{
    ViewData["Title"] = "Edit";
}

<form asp-action="Edit">
    <div class="form-horizontal">
        <h2>Edit Run</h2>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Date" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Distance" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Distance" class="form-control" />
                <span asp-validation-for="Distance" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Hours" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Hours" class="form-control" />
                <span asp-validation-for="Hours" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Minutes" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Minutes" class="form-control" />
                <span asp-validation-for="Minutes" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Seconds" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Seconds" class="form-control" />
                <span asp-validation-for="Seconds" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Location" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Shoe</label>
            <div class="col-md-10">
                <select asp-for="ShoeId" class="dropdown" asp-items="ViewBag.Shoes"></select>
                <a asp-area="" asp-controller="Shoes" asp-action="Create"><span class="glyphicon glyphicon-plus" /></a>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-info" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index" class="btn btn-primary">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
