@model IEnumerable<RunTracker.Models.Run>

@{
    ViewData["Title"] = "Index";
}

<h2>My Runs</h2>

<p>
    <a asp-action="Create">
        <span class="btn btn-default">New Run</span>
    </a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr class="bg-primary">
            <th>
                @Html.ActionLink("Date", "Index", new { sortOrder = ViewBag.DateSort }, new { @class = "sortButton" })
            </th>
            <th>
                @Html.ActionLink("Distance", "Index", new { sortOrder = ViewBag.DistanceSort }, new { @class = "sortButton" })
            </th>
            <th>
                @Html.ActionLink("Pace", "Index", new { sortOrder = ViewBag.PaceSort }, new { @class = "sortButton" })
            </th>
            <th>
                @Html.ActionLink("Location", "Index", new { sortOrder = ViewBag.LocationSort }, new { @class = "sortButton" })
            </th>
            <th>
                @Html.ActionLink("Shoe", "Index", new { sortOrder = ViewBag.ShoeSort }, new { @class = "sortButton" })
            </th>
            <th>
                Manage Runs
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Distance)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PaceString)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    @(ViewData[item.ShoeId.ToString()])
                <td class="btn-group-sm">
                    <a class="smallLink info" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a class="smallLink" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a class="smallLink" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
