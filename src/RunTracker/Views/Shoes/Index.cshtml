@model IEnumerable<RunTracker.Models.Shoe>

@{
    ViewData["Title"] = "Index";
}

<h2>My Shoes</h2>

<p>
    <a asp-action="Create">
        <span class="btn btn-default">New Shoe</span>
    </a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th class="col-sm-2">
                @Html.ActionLink("Active", "Index", new { sortOrder = ViewBag.NameSort }, new { @class = "sortButton" })
            </th>
            <th class="col-sm-2">

                @Html.ActionLink("Mileage", "Index", new { sortOrder = ViewBag.MileageSort }, new { @class = "sortButton" })
            </th>
            <th class="col-sm-2">
                Manage Shoes
            </th>
            <th class="col-sm-2"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            @if (item.InUse)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Mileage
                    <td class="btn-group-sm">
                        <a class="smallLink info" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a class="smallLink" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a class="smallLink" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                    <td></td>
                </tr>
            }
        }
    </tbody>
</table>

<table class="table table-striped table-hover">
    <thead>
        <tr class="danger">
            <th class="col-sm-2">
                @Html.ActionLink("Retired", "Index", new { sortOrder = ViewBag.NameSort }, new { @class = "sortButton" })
            </th>
            <th class="col-sm-2">
            </th>
            <th class="col-sm-2">
            </th>
            <th class="col-sm-2"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            @if (!item.InUse)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Mileage
                    <td class="btn-group-sm">
                        <a class="smallLink info" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a class="smallLink" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a class="smallLink" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                    <td></td>
                </tr>
            }
        }
    </tbody>
</table>
